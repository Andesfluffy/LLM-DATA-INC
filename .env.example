# Required
NEXTAUTH_SECRET=changeme-dev-secret
NEXTAUTH_URL=http://localhost:3000

# NextAuth providers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Primary database for app (NextAuth, settings, audit)
DATABASE_URL=postgresql://user:pass@localhost:5432/llm_data_platform

# 32-byte key for encrypting data source credentials (AES-256-GCM)
DATASOURCE_SECRET_KEY=01234567890123456789012345678901

# Default data source for querying (fallback if user has none)
DEFAULT_DATASOURCE_URL=postgresql://user:pass@localhost:5432/analytics

# Demo data source for onboarding "Try Demo Data" (optional)
DEMO_DATASOURCE_URL=postgresql://user:pass@localhost:5432/demo

# Spreadsheet storage mode: auto, inline, or filesystem
CSV_STORAGE_MODE=auto
# Max bytes to keep inline when CSV_STORAGE_MODE=auto
CSV_INLINE_MAX_BYTES=2097152
# Retention window (days) for stale unreferenced upload files in /uploads
CSV_UPLOAD_RETENTION_DAYS=30

# Firebase (Client)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase (Admin)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
